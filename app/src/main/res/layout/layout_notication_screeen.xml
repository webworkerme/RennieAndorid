<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/splashbg"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <FrameLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/home_page"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
        <ProgressBar
            android:id="@+id/festival_homeprogress"
            android:theme="@style/AppTheme.WhiteAccent"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_width="match_parent">
            <TextView
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/name_festival"
                android:layout_height="wrap_content"
                android:layout_width="230dp"
                android:textColor="#FFF" />
            <TextView
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:id="@+id/name_subfestival"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#FFF" />
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/color_notification_Screen"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:layout_width="match_parent">
                <TextView
                    android:gravity="center"
                    android:text="Hear Ve"
                    android:textColor="#FFF"
                    android:textSize="23sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="12:00"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Joust"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Arena"
                    android:textAllCaps="true"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="4"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/btn_festivel_info"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/info_icontxt"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <TextView
                    android:text="Info"
                    android:textColor="@color/color_progressbar"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/tv_info"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_event_list"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/event_icontxt"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_showmapview"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/map_icontxt"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_wish_list"
                android:layout_height="wrap_content"
                android:layout_width="0dp">
                <ImageView
                    android:padding="10dp"
                    android:src="@drawable/wish_icontxt"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>