<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/snackbar1"
        android:layout_height="50dp"
        android:layout_width="match_parent">
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000">
        <ProgressBar
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:id="@+id/progress_events"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="100"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/framelauout"
            android:indeterminateTint="#f2f2f4" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_nomarker"
                android:background="@color/colorerror"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_width="match_parent">
                <TextView
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:text="No Marker Found"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>
         </LinearLayout>
<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.festivalapp.festivalapp.Activities.MapsActivity" />
</LinearLayout>
   <LinearLayout
       android:background="@color/colorPrimary"
       android:orientation="vertical"
       android:layout_height="0dp"
       android:layout_weight="0.5"
       android:layout_width="match_parent">
       <TextView
           android:gravity="center"
           android:paddingTop="10dp"
           android:paddingLeft="10dp"
           android:textSize="20sp"
           android:textStyle="bold"
           android:text="What art thou searching?"
           android:layout_width="match_parent"
           android:textColor="#FFF"
           android:layout_height="wrap_content"/>
       <LinearLayout
           android:weightSum="5"
           android:layout_height="0dp"
           android:layout_margin="10dp"
           android:layout_weight="0.5"
           android:orientation="horizontal"
           android:layout_width="match_parent">

           <LinearLayout
               android:layout_weight="1"
               android:orientation="vertical"
               android:id="@+id/btn_festivel_info"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_width="0dp">
               <ImageView
                   android:id="@+id/icon_food"
                   android:src="@drawable/map_food"
                   android:padding="3dp"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content"/>
           </LinearLayout>

           <LinearLayout
               android:visibility="visible"
               android:orientation="vertical"
               android:id="@+id/btn_event_list"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:layout_width="0dp">
               <ImageView
                   android:padding="10dp"
                   android:id="@+id/icon_stage"
                   android:src="@drawable/icon_stage"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/btn_hourse"
               android:layout_weight="1"
               android:layout_marginLeft="10dp"
               android:layout_height="match_parent"
               android:layout_width="0dp">
               <ImageView
                   android:id="@+id/icon_hourse"
                   android:src="@drawable/icon_horse"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"/>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/btn_showmapview"
               android:layout_marginLeft="10dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:layout_width="0dp">
               <ImageView
                   android:id="@+id/icon_carriage"
                   android:src="@drawable/icon_carriage"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"/>
           </LinearLayout>

           <LinearLayout
               android:layout_marginLeft="10dp"
               android:layout_weight="1"
               android:id="@+id/btn_wish_list"
               android:layout_height="wrap_content"
               android:layout_width="0dp">
               <ImageView
                   android:id="@+id/icon_privy"
                   android:padding="10dp"
                   android:src="@drawable/icon_privy"
                   android:layout_height="wrap_content"
                   android:layout_width="match_parent"/>
           </LinearLayout>

       </LinearLayout>
   </LinearLayout>
</LinearLayout>