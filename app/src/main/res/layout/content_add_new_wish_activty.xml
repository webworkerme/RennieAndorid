<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_new_wish_activty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="@color/splashbg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.demo.festivalapp.festivalapp.Activities.AddNewWishActivty"
    tools:showIn="@layout/activity_add_new_wish_activty">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_weight="1.4"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_width="match_parent">
            <LinearLayout
                android:weightSum="2"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#FFF"
                        android:text="Wish List"
                        android:textSize="30sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/my_custom_background_linear"
                    android:layout_weight="0.3"
                    android:weightSum="2"
                    android:id="@+id/btn_savewish"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="#FFF"
                        android:text="Save"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
<LinearLayout
    android:layout_height="0dp"
    android:layout_weight="1.5"
    android:layout_width="match_parent">
        <ImageView android:id="@+id/imageView1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent">
        <LinearLayout
            android:background="@drawable/my_custom_background_linear"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <EditText
                android:id="@+id/name_wishlist_item"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:hint="Store Name"
                android:textColorHint="#FFF"
                android:textSize="10sp"
                android:paddingLeft="20dp"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="#FFF"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Spinner
                android:id="@+id/spinner_wishlist"
                android:layout_width="match_parent"
                android:popupBackground="#FFF"
                android:layout_height="wrap_content"
                android:entries="@array/wishlist_arrays"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/my_custom_background_linear"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/festival_latlng"
                android:textStyle=""
                android:textColor="#FFF"
                android:text="Location lat 33.6844° N, lng 73.0479° E"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:paddingLeft="20dp"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/my_custom_background_linear"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <EditText
               android:id="@+id/image_notes"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:hint="Enter Notes"
                android:textSize="10sp"
                android:paddingLeft="20dp"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
