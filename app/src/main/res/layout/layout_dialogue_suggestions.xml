<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:background="@drawable/border_editext"
    android:id="@+id/bedLcl"
    android:orientation="vertical" >
    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Enter Suggestion"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="-50dp" >
            <LinearLayout
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center">
                <TextView
                    android:visibility="gone"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="Update Profile"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Email" />
                </android.support.design.widget.TextInputLayout>
                <AutoCompleteTextView
                    android:id="@+id/u_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter Email" />
                <android.support.design.widget.TextInputLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">
                    <EditText android:id="@+id/edt_suggestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Enter Suggestions" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <android.support.v7.widget.AppCompatButton
                            android:layout_margin="20dp"
                            android:id="@+id/btn_updatrecord"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/button_dialogue"
                            android:textColor="#000"
                            android:text="Send"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <android.support.v7.widget.AppCompatButton
                            android:layout_margin="20dp"
                            android:id="@+id/btn_close"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/border_editext"
                            android:textColor="#000"
                            android:text="Close"/>
                    </LinearLayout>
                </LinearLayout>
                <!---add your views here-->
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/imageView_close"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="top|left"
            android:clickable="true"
            android:src="@drawable/dialogue_cancel" />

    </FrameLayout>

</LinearLayout>