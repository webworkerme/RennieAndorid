<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashbg"
    android:orientation="vertical">

    <com.demo.festivalapp.festivalapp.UtilitiesClasses.ProportionalImageView
        android:id="@+id/home_page"
        android:src="@drawable/test_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:visibility="gone"
                android:text=""
                android:textColor="#FFF"
                android:textSize="20sp"
                android:id="@+id/tv_festname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/event_alert_bg"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:id="@+id/event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="12:00pm"
                    android:textColor="#FFF"
                    android:textSize="15sp" />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Joust"
                    android:textColor="#FFF"
                    android:id="@+id/event_name"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/event_place"
                    android:textSize="18sp"
                    android:text="Arena"
                    android:layout_marginTop="30dp"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>\
</LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/btn_festivel_info"
            android:layout_height="wrap_content"
            android:layout_width="0dp">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/info_icontxt"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:text="Info"
                android:textColor="@color/color_progressbar"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/tv_info"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_event_list"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/event_icontxt"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_showmapview"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/map_icontxt"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/btn_wish_list"
            android:layout_height="wrap_content"
            android:layout_width="0dp">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/wish_icontxt"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>